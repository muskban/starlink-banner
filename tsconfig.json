{
  "compilerOptions": {
    "target": "ES6",                         // Sortie en ES6 pour les navigateurs modernes
    "module": "ESNext",                      // Utilisation de modules ES pour le bundling
    "moduleResolution": "node",              // Résolution des modules comme Node.js
    "outDir": "./dist",                      // Dossier de sortie des fichiers compilés
    "esModuleInterop": true,                 // Interopérabilité avec les modules CommonJS
    "skipLibCheck": true,                    // Ignorer la vérification des types dans les lib externes
    //"strict": true,                           // Activer toutes les options strictes
    "declaration": true
  },
  "include": ["src/**/*"]
}